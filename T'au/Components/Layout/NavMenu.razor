@using System.Text.Json
@using WarHammerRoster.Models
@using System.IO
@inject IWebHostEnvironment Env

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Battle Command</a>
    </div>
</div>

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill" aria-hidden="true"></span> Home
            </NavLink>
        </div>

        <div class="nav-item px-3 mt-3 mb-1">
            <span class="text-uppercase fw-bold text-white-50 small ps-3">Tactical</span>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="objectives/my">
                <span class="bi bi-person-badge" aria-hidden="true"></span> My Objectives
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="objectives/enemy">
                <span class="bi bi-person-badge-fill" aria-hidden="true"></span> Enemy Objectives
            </NavLink>
        </div>

        <div class="nav-item px-3 mt-3 mb-1">
            <span class="text-uppercase fw-bold text-white-50 small ps-3">Reference</span>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="rules">
                <span class="bi bi-book" aria-hidden="true"></span> Army Rules
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="corerules">
                <span class="bi bi-journals" aria-hidden="true"></span> Core Rules
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="corestratagems">
                <span class="bi bi-lightning-charge" aria-hidden="true"></span> Stratagems
            </NavLink>
        </div>

        @if (myUnits != null)
        {
            <div class="nav-item px-3 mt-3 mb-1">
                <span class="text-uppercase fw-bold text-warning small ps-3" style="letter-spacing: 1px;">My Cadre</span>
            </div>

            <div class="nav-item px-3">
                <NavLink class="nav-link" href="roster/my">
                    <span class="bi bi-list-nested" aria-hidden="true"></span> View All
                </NavLink>
            </div>

            @foreach (var unit in myUnits)
            {
                <div class="nav-item px-3">
                    <a class="nav-link py-1" href="roster/my#@GetId(unit)">
                        <span class="bi bi-chevron-right small me-2 text-warning" aria-hidden="true"></span>
                        <span style="font-size: 0.9em;">@unit.Name</span>
                    </a>
                </div>
            }
        }

        @if (enemyUnits != null && enemyUnits.Any())
        {
            <div class="nav-item px-3 mt-3 mb-1">
                <span class="text-uppercase fw-bold text-danger small ps-3" style="letter-spacing: 1px;">Enemy Forces</span>
            </div>

            <div class="nav-item px-3">
                <NavLink class="nav-link" href="roster/enemy">
                    <span class="bi bi-list-nested" aria-hidden="true"></span> View All
                </NavLink>
            </div>

            @foreach (var unit in enemyUnits)
            {
                <div class="nav-item px-3">
                    <a class="nav-link py-1" href="roster/enemy#@GetId(unit)">
                        <span class="bi bi-crosshair small me-2 text-danger" aria-hidden="true"></span>
                        <span style="font-size: 0.9em;">@unit.Name</span>
                    </a>
                </div>
            }
        }

    </nav>
</div>

@code {
    private List<Selection>? myUnits;
    private List<Selection>? enemyUnits;

    protected override async Task OnInitializedAsync()
    {
        // Load My Army
        myUnits = await LoadUnitsFromFile("roster.json");

        // Load Enemy Army
        enemyUnits = await LoadUnitsFromFile("enemy.json");
    }

    private async Task<List<Selection>?> LoadUnitsFromFile(string fileName)
    {
        var filePath = Path.Combine(Env.WebRootPath, fileName);
        if (!File.Exists(filePath)) return null;

        try
        {
            var jsonString = await File.ReadAllTextAsync(filePath);
            var options = new JsonSerializerOptions { PropertyNameCaseInsensitive = true };
            var data = JsonSerializer.Deserialize<RosterRoot>(jsonString, options);

            if (data?.Roster?.Forces?.FirstOrDefault() != null)
            {
                return data.Roster.Forces.First().Selections
                    .Where(s => s.Name != "Configuration" &&
                                s.Name != "Battle Size" &&
                                s.Name != "Detachment" &&
                                s.Name != "Show/Hide Options")
                    .ToList();
            }
        }
        catch { /* Ignore errors */ }

        return null;
    }

    private string GetId(Selection unit) => unit.Name.Replace(" ", "-").Replace("'", "").Replace("’", "");
}