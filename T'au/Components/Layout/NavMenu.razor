@using System.Text.Json
@using WarHammerRoster.Models
@using System.IO
@inject IWebHostEnvironment Env

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Battle Command</a>
    </div>
</div>

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill" aria-hidden="true"></span> Home
            </NavLink>
        </div>

        <div class="nav-item px-3 mt-3 mb-1">
            <span class="text-uppercase fw-bold text-white-50 small ps-3">Tactical Objectives</span>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="objectives/p1">
                <span class="bi bi-person-badge" aria-hidden="true"></span> P1 Objectives
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="objectives/p2">
                <span class="bi bi-person-badge-fill" aria-hidden="true" style="color: #5dade2;"></span> P2 Objectives
            </NavLink>
        </div>

        <div class="nav-item px-3 mt-3 mb-1">
            <span class="text-uppercase fw-bold text-white-50 small ps-3">Reference</span>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="rules">
                <span class="bi bi-book" aria-hidden="true"></span> Army Rules
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="corerules">
                <span class="bi bi-journals" aria-hidden="true"></span> Core Rules
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="corestratagems">
                <span class="bi bi-lightning-charge" aria-hidden="true"></span> Stratagems
            </NavLink>
        </div>

        @if (p1Units != null)
        {
            <div class="nav-item px-3 mt-3 mb-1">
                <span class="text-uppercase fw-bold text-warning small ps-3" style="letter-spacing: 1px;">Player 1</span>
            </div>

            <div class="nav-item px-3">
                <NavLink class="nav-link" href="roster/p1">
                    <span class="bi bi-list-nested" aria-hidden="true"></span> Full Roster
                </NavLink>
            </div>

            @foreach (var unit in p1Units)
            {
                <div class="nav-item px-3">
                    <NavLink class="nav-link py-0" href="@($"roster/p1#{GetId(unit)}")">
                        <span class="bi bi-chevron-right small me-2 text-warning" aria-hidden="true"></span>
                        <span style="font-size: 0.9em;">@unit.Name</span>
                    </NavLink>
                </div>
            }
        }

        @if (p2Units != null && p2Units.Any())
        {
            <div class="p2-section">
                <div class="nav-item px-3 mt-3 mb-1">
                    <span class="text-uppercase fw-bold small ps-3" style="letter-spacing: 1px; color: #5dade2;">Player 2</span>
                </div>

                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="roster/p2">
                        <span class="bi bi-list-nested" aria-hidden="true" style="color: #5dade2;"></span> Full Roster
                    </NavLink>
                </div>

                @foreach (var unit in p2Units)
                {
                    <div class="nav-item px-3">
                        <NavLink class="nav-link py-0" href="@($"roster/p2#{GetId(unit)}")">
                            <span class="bi bi-crosshair small me-2" aria-hidden="true" style="color: #5dade2;"></span>
                            <span style="font-size: 0.9em;">@unit.Name</span>
                        </NavLink>
                    </div>
                }
            </div>
        }

    </nav>
</div>

@code {
    private List<Selection>? p1Units;
    private List<Selection>? p2Units;

    protected override async Task OnInitializedAsync()
    {
        p1Units = await LoadUnitsFromFile("roster.json");
        p2Units = await LoadUnitsFromFile("enemy.json");
    }

    private async Task<List<Selection>?> LoadUnitsFromFile(string fileName)
    {
        var filePath = Path.Combine(Env.WebRootPath, fileName);
        if (!File.Exists(filePath)) return null;

        try
        {
            var jsonString = await File.ReadAllTextAsync(filePath);
            var options = new JsonSerializerOptions { PropertyNameCaseInsensitive = true };
            var data = JsonSerializer.Deserialize<RosterRoot>(jsonString, options);

            if (data?.Roster?.Forces?.FirstOrDefault() != null)
            {
                return data.Roster.Forces.First().Selections
                    .Where(s => s.Name != "Configuration" &&
                                s.Name != "Battle Size" &&
                                s.Name != "Detachment" &&
                                s.Name != "Show/Hide Options")
                    .ToList();
            }
        }
        catch { }
        return null;
    }

    private string GetId(Selection unit) => unit.Name.Replace(" ", "-").Replace("'", "").Replace("’", "");
}