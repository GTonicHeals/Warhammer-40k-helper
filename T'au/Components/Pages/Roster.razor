@code {
    [Parameter]
    public string? Side { get; set; }

    private RosterRoot? rosterData;
    private double CurrentPoints => rosterData?.Roster?.Costs?.FirstOrDefault(c => c.Name == "pts")?.Value ?? 0;
    private double LimitPoints => rosterData?.Roster?.CostLimits?.FirstOrDefault(c => c.Name == "pts")?.Value ?? 0;
    private string DetachmentName = "";
    private Rule? DetachmentRule;

    // 1. SUBSCRIBE TO NAVIGATION EVENTS
    protected override async Task OnInitializedAsync()
    {
        Nav.LocationChanged += OnLocationChanged;
    }

    protected override async Task OnParametersSetAsync()
    {
        if (string.IsNullOrEmpty(Side)) Side = "p1";

        var fileName = Side == "p2" ? "enemy.json" : "roster.json";
        var filePath = Path.Combine(Env.WebRootPath, fileName);

        rosterData = null;
        DetachmentName = "";
        DetachmentRule = null;

        try
        {
            if (File.Exists(filePath))
            {
                var jsonString = await File.ReadAllTextAsync(filePath);
                var options = new JsonSerializerOptions { PropertyNameCaseInsensitive = true };
                rosterData = JsonSerializer.Deserialize<RosterRoot>(jsonString, options);
                FindDetachmentRules();
            }
        }
        catch { }
    }

    // 2. THIS HANDLES CLICKING LINKS (Must be 'async void', NOT 'override')
    private async void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        await ScrollToFragment();
        StateHasChanged(); // Force the page to refresh
    }

    // 3. THIS HANDLES INITIAL LOAD
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await ScrollToFragment();
        }
    }

    // 4. CLEANUP (Required to stop memory leaks)
    public void Dispose()
    {
        Nav.LocationChanged -= OnLocationChanged;
    }

    private async Task ScrollToFragment()
    {
        var uri = new Uri(Nav.Uri);
        if (uri.Fragment.Length > 1)
        {
            var elementId = uri.Fragment.Substring(1); // Remove the '#'
            await Task.Delay(100); // Give DOM time to render
            try
            {
                await JS.InvokeVoidAsync("scrollToElementId", elementId);
            }
            catch { }
        }
    }

    // --- YOUR EXISTING HELPERS (Keep these exactly as they are) ---

    private void FindDetachmentRules()
    {
        if (rosterData?.Roster?.Forces?.FirstOrDefault() == null) return;
        var force = rosterData.Roster.Forces.First();

        // 1. Find the "Detachment" category
        var detachmentSelection = force.Selections?.FirstOrDefault(s => s.Name == "Detachment");

        // 2. Find the specific choice (e.g., "Mont'ka" or "Gladius Task Force")
        if (detachmentSelection?.Selections != null)
        {
            var chosen = detachmentSelection.Selections.FirstOrDefault();
            if (chosen != null)
            {
                DetachmentName = chosen.Name;
                DetachmentRule = chosen.Rules?.FirstOrDefault();
            }
        }
    }

    private IEnumerable<Selection> GetUnits()
    {
        // 1. Safety Check: Is data loaded?
        if (rosterData?.Roster?.Forces?.FirstOrDefault() == null)
            return Enumerable.Empty<Selection>();

        // 2. Get the main force
        var force = rosterData.Roster.Forces.First();

        // 3. Return only real units (Filter out metadata)
        return force.Selections?
            .Where(s => s.Name != "Configuration" &&
                        s.Name != "Battle Size" &&
                        s.Name != "Detachment" &&
                        s.Name != "Show/Hide Options")
            .ToList() ?? new List<Selection>();
    }

    private string GetId(Selection unit) => unit.Name?.Replace(" ", "-").Replace("'", "").Replace("’", "") ?? "unknown";
    private double GetPointCost(Selection unit) => unit.Costs?.FirstOrDefault(c => c.Name == "pts")?.Value ?? 0;
    private string GetChar(Profile p, string statName) => p.Characteristics?.FirstOrDefault(c => c.Name == statName)?.Value ?? "-";

    private List<Profile> GetAllProfilesRecursive(Selection current, string typeName)
    {
        var found = new List<Profile>();
        if (current == null) return found;
        if (current.Profiles != null) found.AddRange(current.Profiles.Where(p => p.TypeName == typeName));
        if (current.Selections != null) foreach (var child in current.Selections) found.AddRange(GetAllProfilesRecursive(child, typeName));
        return found;
    }

    private List<Profile> GetWeapons(Selection unit, string type) => GetAllProfilesRecursive(unit, type).DistinctBy(w => w.Name).ToList();
    private Profile? GetProfileByType(Selection unit, string type) => GetAllProfilesRecursive(unit, type).FirstOrDefault();

    private List<Rule> GetAbilities(Selection unit)
    {
        var list = new List<Rule>();
        var abilityProfiles = GetAllProfilesRecursive(unit, "Abilities");
        foreach (var p in abilityProfiles)
        {
            var desc = p.Characteristics?.FirstOrDefault(c => c.Name == "Description")?.Value ?? "";
            list.Add(new Rule { Name = p.Name, Description = desc });
        }
        GetRulesRecursive(unit, list);
        return list.DistinctBy(r => r.Name).OrderBy(r => r.Name).ToList();
    }

    private void GetRulesRecursive(Selection current, List<Rule> collected)
    {
        if (current == null) return;
        if (current.Rules != null) collected.AddRange(current.Rules);
        if (current.Selections != null) foreach (var child in current.Selections) GetRulesRecursive(child, collected);
    }

    private List<string> GetKeywords(Selection unit)
    {
        return unit.Categories?.Where(c => c.Name != "Configuration" && c.Name != "Uncategorized").Select(c => c.Name).ToList() ?? new List<string>();
    }

    private MarkupString FormatText(string text)
    {
        if (string.IsNullOrEmpty(text)) return new MarkupString("");
        text = text.Replace("^^", "");
        text = Regex.Replace(text, @"\*\*(.+?)\*\*", "<strong>$1</strong>");
        text = text.Replace("\n", "<br/>");
        return new MarkupString(text);
    }
}