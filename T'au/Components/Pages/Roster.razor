@code {
    private RosterRoot? rosterData;
    private double CurrentPoints => rosterData?.Roster.Costs.FirstOrDefault(c => c.Name == "pts")?.Value ?? 0;
    private double LimitPoints => rosterData?.Roster.CostLimits.FirstOrDefault(c => c.Name == "pts")?.Value ?? 0;

    protected override async Task OnInitializedAsync()
    {
        var filePath = Path.Combine(Env.WebRootPath, "roster.json");
        if (File.Exists(filePath))
        {
            var jsonString = await File.ReadAllTextAsync(filePath);
            // Ensure case-insensitivity to match "TypeName" vs "typeName"
            var options = new JsonSerializerOptions { PropertyNameCaseInsensitive = true };
            rosterData = JsonSerializer.Deserialize<RosterRoot>(jsonString, options);
        }
    }

    private IEnumerable<Selection> GetUnits()
    {
        if (rosterData?.Roster?.Forces?.FirstOrDefault() == null) return Enumerable.Empty<Selection>();
        return rosterData.Roster.Forces.First().Selections
            .Where(s => s.Name != "Configuration" && s.Name != "Battle Size" && s.Name != "Detachment" && s.Name != "Show/Hide Options");
    }

    private string GetId(Selection unit) => unit.Name.Replace(" ", "-").Replace("'", "").Replace("’", "");

    private double GetPointCost(Selection unit) => unit.Costs.FirstOrDefault(c => c.Name == "pts")?.Value ?? 0;

    private string GetChar(Profile p, string statName) => p.Characteristics.FirstOrDefault(c => c.Name == statName)?.Value ?? "-";

    // --- 1. THE UNIVERSAL RECURSIVE FINDER ---
    private List<Profile> GetAllProfilesRecursive(Selection current, string typeName)
    {
        var found = new List<Profile>();

        // A. Check for profiles on this specific item (Unit, Model, or Upgrade)
        if (current.Profiles != null)
        {
            found.AddRange(current.Profiles.Where(p => p.TypeName == typeName));
        }

        // B. Dig deeper into children (Recursion)
        if (current.Selections != null)
        {
            foreach (var child in current.Selections)
            {
                found.AddRange(GetAllProfilesRecursive(child, typeName));
            }
        }
        return found;
    }

    // --- 2. UPDATED GET STATS (Uses Recursion) ---
    private Profile? GetProfileByType(Selection unit, string type)
    {
        // Finds the first stat block (M, T, SV) anywhere in the unit hierarchy
        return GetAllProfilesRecursive(unit, type).FirstOrDefault();
    }

    // --- 3. UPDATED GET WEAPONS (Uses Recursion) ---
    private List<Profile> GetWeapons(Selection unit, string type)
    {
        // Finds all weapons, even those inside Wargear/Drones
        var weapons = GetAllProfilesRecursive(unit, type);
        return weapons.DistinctBy(w => w.Name).ToList();
    }

    // --- 4. UPDATED GET ABILITIES (Uses Recursion) ---
    private List<Rule> GetAbilities(Selection unit)
    {
        var list = new List<Rule>();

        // A. Get Rules attached directly (e.g., Faction Rules)
        if (unit.Rules != null) list.AddRange(unit.Rules);

        // B. Get "Abilities" Profiles recursively (e.g., Shield Drone, Shield Generator)
        var abilityProfiles = GetAllProfilesRecursive(unit, "Abilities");

        foreach (var p in abilityProfiles)
        {
            var desc = p.Characteristics.FirstOrDefault(c => c.Name == "Description")?.Value ?? "";
            list.Add(new Rule { Name = p.Name, Description = desc });
        }

        return list.DistinctBy(r => r.Name).ToList();
    }

    private List<string> GetKeywords(Selection unit)
    {
        // Keywords are usually on the top-level Unit, so recursion isn't strictly necessary
        // but checking Categories is the correct way for BattleScribe data.
        return unit.Categories
            .Where(c => c.Name != "Configuration" && c.Name != "Uncategorized")
            .Select(c => c.Name).ToList();
    }
}